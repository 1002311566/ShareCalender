<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_my_friend_details"
    android:orientation="vertical">
    <com.yihuan.sharecalendar.ui.view.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="220px"
        android:layout_height="220px"
        android:src="@mipmap/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:layout_marginBottom="30px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:layout_marginRight="20px"
            android:textColor="@color/color_text_black_222"
            />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/iv_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="@color/color_text_black_999"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_text_black_999"
        android:textSize="28px"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px"
        android:gravity="center"
        android:layout_marginTop="38px"
        android:layout_marginBottom="40px"
        />
</LinearLayout>