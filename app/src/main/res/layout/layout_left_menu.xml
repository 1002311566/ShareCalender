<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_left_menu_xinqing"
        android:text="心情指数权限"
        android:layout_marginTop="100px"
        android:drawableLeft="@mipmap/icon_smile"
        style="@style/style_left_menu"
        android:visibility="gone"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_left_menu_to_date"
        android:text="跳转到指定日期"
        android:drawableLeft="@mipmap/icon_left_menu_to_date"
        style="@style/style_left_menu" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_left_menu_year"
        android:text="年视图"
        android:drawableLeft="@mipmap/icon_left_menu_year"
        style="@style/style_left_menu" />

    <TextView
        android:id="@+id/tv_left_menu_edit_info"
        android:text="个人资料"
        android:layout_marginTop="100px"
        android:drawableLeft="@mipmap/icon_left_menu_edit"
        style="@style/style_left_menu" />

    <TextView
        android:id="@+id/tv_left_menu_setting"
        android:text="设置"
        android:drawableLeft="@mipmap/icon_left_menu_set"
        style="@style/style_left_menu" />

    <TextView
        android:id="@+id/tv_left_menu_say"
        android:text="留言板"
        android:drawableLeft="@mipmap/icon_left_menu_say"
        style="@style/style_left_menu" />

    <TextView
        android:id="@+id/tv_left_menu_share"
        android:text="分享推荐"
        android:drawableLeft="@mipmap/icon_left_sharerecommend"
        style="@style/style_left_menu" />

    <Button
        android:id="@+id/btn_tixing"
        android:background="@drawable/selector_defualt_img_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="定 制 化 提 醒"
        android:textSize="42px"
        android:textColor="@color/color_white"
        android:layout_marginTop="85px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        />

    <View
        android:layout_width="1px"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_gravity="center"
        />
    <TextView
        android:text="分享日历，一起行动"
        style="@style/style_left_menu"
        android:gravity="center"
        android:layout_marginBottom="80px"
        />
</LinearLayout>