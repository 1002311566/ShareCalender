<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_home_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:src="@mipmap/icon_home_menu"
            android:visibility="visible" />

            <!--消息-->
        <FrameLayout
            android:id="@+id/fl_home_title_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="5px"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/iv_home_title_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="5px"
                android:src="@mipmap/icon_home_msg"
                android:visibility="visible" />
            <LinearLayout
                android:id="@+id/ll_msg_count"
                android:layout_marginTop="5px"
                android:layout_width="30px"
                android:layout_height="30px"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="right|top"
                android:background="@drawable/shape_circle_red"
                >
            <TextView
                android:id="@+id/tv_home_title_msg_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_white"
                android:textSize="20px"
                android:gravity="center"
                android:visibility="visible"
                />
            </LinearLayout>
        </FrameLayout>

        <!--内容-->
        <TextView
            android:id="@+id/tv_home_title_name"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_17"
            android:text="2017年7月26日"
            android:visibility="visible" />
        <!--心情-->
        <ImageView
            android:id="@+id/iv_home_title_xinqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="10px"
            android:layout_gravity="right"
            android:visibility="visible" />
        <!--搜索-->
        <ImageView
            android:id="@+id/iv_home_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:layout_gravity="right"
            android:src="@mipmap/icon_home_menu_search"
            android:visibility="visible" />

    </LinearLayout>

    <include layout="@layout/layout_spli_gray" />
</LinearLayout>